{
  "name": "mailhub",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "next lint --dir app --dir lib --max-warnings 0",
    "verify": "npm run typecheck && npm run build",
    "smoke": "node scripts/smoke.mjs",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "MAILHUB_TEST_MODE=1 npx playwright test e2e/qa-strict-unified.spec.ts",
    "e2e": "MAILHUB_TEST_MODE=1 npx playwright test --workers=1",
    "security:scan": "node scripts/security-scan.mjs",
    "qa:strict": "npm run verify && npm run smoke && npm run lint && npm run test:coverage && npm run security:scan && npm run e2e"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "googleapis": "^140.0.0",
    "lucide-react": "^0.562.0",
    "next": "^15.1.0",
    "next-auth": "5.0.0-beta.30",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.9",
    "postcss": "^8.5.6",
    "server-only": "^0.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
